<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.workersapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WorkersApp">
        <activity android:name=".activites.SettingsActivity"></activity>
        <activity android:name=".activites.WoekrGigManeuActivity" />
        <activity android:name=".activites.CategoryActivity" />
        <activity android:name=".activites.GigDetailActivity" />
        <activity android:name=".activites.GigActivity" />
        <activity
            android:name=".activites.DashBordActivity"
            android:label="@string/title_activity_dash_bord" />
        <activity android:name=".activites.ProfileActivity" />
        <activity android:name=".activites.UserProfileActivity" />
        <activity android:name=".activites.ForgetPassActivity" />
        <activity android:name=".activites.CardActivity" />
        <activity android:name=".activites.RegisterActivity" />
        <activity android:name=".activites.LoginActivity" />
        <activity
            android:name=".activites.LoginPage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activites.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activites.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarFullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>